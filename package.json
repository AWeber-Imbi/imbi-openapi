{
  "name": "imbi-openapi",
  "description": "Composable OpenAPI spec for Imbi",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/AWeber/imbi"
  },
  "author": "Gavin M. Roy",
  "license": "BSD-3-Clause",
  "scripts": {
    "build": "yarn redoc && swagger-cli bundle src/main.yaml  --outfile build/openapi.yaml --type yaml",
    "prettier": "prettier -w src",
    "redoc": "cp node_modules/redoc/bundles/redoc.standalone.js build/redoc.standalone.js",
    "test": "yarn build && swagger-cli validate build/openapi.yaml"
  },
  "devDependencies": {
    "ajv": "4.11.8 - 6",
    "core-js": "^3.1.4",
    "dompurify": "^2.0.17",
    "husky": ">=4",
    "lint-staged": ">=10",
    "lodash": "^4.17.21",
    "marked": "^0.7.0",
    "mobx": "^6.0.4",
    "openapi-types": ">=7",
    "prettier": "^2.2.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-is": ">= 16.8.0",
    "redoc": "2.0.0-rc.53",
    "styled-components": "^5.1.1",
    "swagger-cli": "^4.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,yaml}": "prettier --write"
  }
}
